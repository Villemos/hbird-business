<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/context 
       http://www.springframework.org/schema/context/spring-context-2.5.xsd
       http://camel.apache.org/schema/spring 
       http://camel.apache.org/schema/spring/camel-spring.xsd">

	<import resource="core-parts.xml" />

	<!-- String issuedBy, String name, String type, String description, Double p1, Double p2, Double p3 -->
	<bean id="location" class="org.hbird.exchange.core.D3Vector">
		<constructor-arg index="0" value="SystemCore"/>
		<constructor-arg index="1" value="Darmstadt Location"/>
		<constructor-arg index="2" value="Location"/>
		<constructor-arg index="3" value="The geo location of the Darmstadt ground station."/>
		<constructor-arg index="4" value="49.87" />
		<constructor-arg index="5" value="8.64" />
		<constructor-arg index="6" value="59.0" />
	</bean>	
	
	<!-- String name, int thresholdElevation, int minAzimuth, int maxAzimuth, int minElevation, int maxElevation, long port, String host -->
	<bean id="rotator" class="org.hbird.business.groundstation.hamlib.rotator.HamlibRotatorPart">
		<constructor-arg index="0" value="Rotator"/>
		<constructor-arg index="1" value="0"/>
		<constructor-arg index="2" value="0"/>				
		<constructor-arg index="3" value="180"/>
		<constructor-arg index="4" value="0"/>
		<constructor-arg index="5" value="180"/>
		<constructor-arg index="6" value="4533" />
		<constructor-arg index="7" value="localhost" />
	</bean>

	<!-- long minFrequency, long maxFrequency, boolean isUplink, boolean isDownlink, long gain -->
	<bean id="radio" class="org.hbird.business.groundstation.hamlib.radio.HamlibRadioPart">
		<constructor-arg index="0" value="Radio"/>
		<constructor-arg index="1" value="0"/>
		<constructor-arg index="2" value="1000000"/>				
		<constructor-arg index="3" value="true"/>
		<constructor-arg index="4" value="true"/>
		<constructor-arg index="5" value="100"/>
		<constructor-arg index="6" value="4532" />
		<constructor-arg index="7" value="localhost" />
	</bean>

	<!-- String issuedBy, String name, String type, String description, Rotator rotator, RadioDevice radioDevice -->	
	<bean id="antenna" class="org.hbird.exchange.groundstation.Antenna">
		<constructor-arg index="0" value="CoreSystem" />
		<constructor-arg index="1" value="Antenna 1" />
		<constructor-arg index="2" ref="rotator" />
		<constructor-arg index="3" ref="radio" />
	</bean>

	<!-- D3Vector geoLocation, Antenna antenna -->
	<bean id="gsDarmstadt" class="org.hbird.exchange.groundstation.GroundStation">
		<constructor-arg index="0" value="Ground Station Darmstadt" />
		<constructor-arg index="1" ref="location" />
		<property name="antenna" ref="antenna"/>
		<property name="isPartOf" ref= "groundstations"/>
	</bean>
			
</beans>
