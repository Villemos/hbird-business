<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/context 
       http://www.springframework.org/schema/context/spring-context-2.5.xsd
       http://camel.apache.org/schema/spring 
       http://camel.apache.org/schema/spring/camel-spring.xsd">

	<import resource="satellite-estcube1-parts.xml" />
	
	<!-- String name, String limitName, eLimitType type, String ofParameter, Number value, String stateName, String stateDescription -->
	<!-- String ID, String name, String limitName, eLimitType type, String ofParameter, Double value, String stateName, String stateDescription	 -->
	<bean id="limit.LowerRechargeRate" class="org.hbird.business.validation.LimitCheckComponent">
		<constructor-arg index="0" value="LIM_LOWER_BATTERY_CURRENT"/>
		<constructor-arg index="1" value="LIM_LOWER_BATTERY_CURRENT"/>
		<constructor-arg index="2" value="LIM_LOWER_BATTERY_CURRENT"/>
		<constructor-arg index="3" value="Lower"/>
		<constructor-arg index="4" value="Battery Charge Rate Current"/>
		<constructor-arg index="5" value="9.6"/>
		<constructor-arg index="6" value="To Low Recharge Rate"/>
		<constructor-arg index="7" value="The lower limit of the Battery Charge Rate Current"/>
	</bean>
	
	<!-- String componentname, String scriptname, String paraName, String paraDescription, String paraUnit, String bindings -->
	<bean id="syntheticParameter.batteryRechargeTime" class="org.hbird.business.scripting.ScriptComponent">
		<constructor-arg index="0" value="SCRIPT_BATTERY_RECHARGE_TIME"/>
		<constructor-arg index="1" value="SCRIPT_BATTERY_RECHARGE_TIME"/>
		<constructor-arg index="2" value="BatteryRechargeTime"/>
		<constructor-arg index="3" value="Battery Recharge Time"/>
		<constructor-arg index="4" value="The time until the battery is fully recharged."/>
		<constructor-arg index="5" value="Seconds"/>
		<constructor-arg index="6" value="Battery Capacity=capacity:Charging Efficiency=lostCharge:Battery Charge Rate Current=chargerOutput"/>	
	</bean>

		<!-- String issuedBy, String name, Satellite satellite, String tleLine1, String tleLine2 -->
	<bean id="tle" class="org.hbird.exchange.navigation.TleOrbitalParameters">
		<constructor-arg index="0" value="CoreSystem"/>
		<constructor-arg index="1" value="Tle Parameters of ESTCube-1"/>			
		<constructor-arg index="2" ref="estcube"/>
		<constructor-arg index="3" value="1 27842U 03031C   12330.56671446  .00000340  00000-0  17580-3 0  5478"/>
		<constructor-arg index="4" value="2 27842 098.6945 336.9241 0009991 090.9961 269.2361 14.21367546487935"/>		
	</bean>

		
	<bean id="starter" class="org.hbird.business.metadatapublisher.NamedObjectPublisher" init-method="start">
		<constructor-arg index="0" value="SystemCore"/>
		<constructor-arg index="1">
        	<list>
 		       	<ref bean="tle"/>
            	<ref bean="estcube" />
            	<ref bean="limit.LowerRechargeRate" />
            	<ref bean="syntheticParameter.batteryRechargeTime"/>
         	</list>
	    </constructor-arg>
	</bean>
	
</beans>
