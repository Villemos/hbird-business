<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-2.5.xsd
       http://camel.apache.org/schema/spring
       http://camel.apache.org/schema/spring/camel-spring.xsd">

	<!-- A simple structure of the ESTCUBE ground segment;
	       \- ESTCUBE
	         |- Satellites                [will hold the ESTCube-1 specification]
	         |- Ground Stations           [will hold the ES5EC specification]
	         \- Mission Operation Centre  [will hold commanding, archive, websockets, etc specifications]
	 -->

	<bean id="root" class="org.hbird.exchange.core.Part">
		<constructor-arg index="0" value="ESTCUBE" />
		<constructor-arg index="1" value="The root system. Complete, everything." />
	</bean>

	<bean id="satellites" class="org.hbird.exchange.core.Part">
		<constructor-arg index="0" value="Satellites" />
		<constructor-arg index="1" value="The satellite(s) of the mission" />
		<property name="isPartOf" ref="root" />
	</bean>

	<bean id="groundstations" class="org.hbird.exchange.core.Part">
		<constructor-arg index="0" value="Ground Stations" />
		<constructor-arg index="1" value="The groundstation(s) of the mission" />
		<property name="isPartOf" ref="root" />	</bean>

	<bean id="moc" class="org.hbird.exchange.core.Part">
		<constructor-arg index="0" value="Mission Operation Center" />
		<constructor-arg index="1" value="The groundsystem(s) of the mission" />
		<property name="isPartOf" ref="root" />
	</bean>

</beans>

