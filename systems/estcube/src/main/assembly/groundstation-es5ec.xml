<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context 
       http://www.springframework.org/schema/context/spring-context-3.0.xsd
       http://camel.apache.org/schema/spring 
       http://camel.apache.org/schema/spring/camel-spring.xsd">

	<import resource="groundstation-es5ec-parts.xml" />
    
    <bean id="configurator" class="org.hbird.business.configurator.ConfiguratorComponent" init-method="init">
        <constructor-arg index="0" name="name" value="ES5EC configurator"/>
    </bean>
    
			
	<!-- Publish the parts of the ground station -->
	<bean id="starter" class="org.hbird.business.metadatapublisher.NamedObjectPublisher" init-method="start">
		<constructor-arg index="0" name="name" value="SystemCore"/>
        <constructor-arg index="1" name="destination" value="ES5EC configurator"/>
		<constructor-arg index="2" name="objects">
			<list>
				<ref bean="antenna" />
				<ref bean="es5ec" />
				<ref bean="rotator" />
				<ref bean="radio" />
			</list>
		</constructor-arg>
	</bean>
			
</beans>
