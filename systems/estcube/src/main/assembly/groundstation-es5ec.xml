<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/context 
       http://www.springframework.org/schema/context/spring-context-2.5.xsd
       http://camel.apache.org/schema/spring 
       http://camel.apache.org/schema/spring/camel-spring.xsd">

	<import resource="injection.xml"/>
	
    <context:component-scan base-package="eu.estcube.common, eu.estcube.gs.rotator" />

    <!-- Properties config -->
    <bean id="propertyPlaceholder" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE" />
        <property name="ignoreResourceNotFound" value="true" />
        <property name="locations">
            <list>
                <value>classpath:es5ec.properties</value>
                <value>file:es5ec.properties</value>
            </list>
        </property>
    </bean>
	
	
	<!-- String issuedBy, String name, String type, String description, Double p1, Double p2, Double p3 -->
	<bean id="location" class="org.hbird.exchange.navigation.D3Vector">
		<constructor-arg index="0" value="ES5EC"/>
		<constructor-arg index="1" value="ES5EC Location"/>
		<constructor-arg index="2" value="Location"/>
		<constructor-arg index="3" value="The geo location of the ES5EC ground station."/>
		<constructor-arg index="4" value="26.7147224" />
		<constructor-arg index="5" value="58.3708465" />
		<constructor-arg index="6" value="0d" />
	</bean>
	
	<!-- int thresholdElevation, int minAzimuth, int maxAzimuth, int minElevation, int maxElevation -->
	<bean id="rotator" class="eu.estcube.gs.rotator.HamlibRotatorPart">
		<constructor-arg index="0" value="0"/>
		<constructor-arg index="1" value="0"/>				
		<constructor-arg index="2" value="180"/>
		<constructor-arg index="3" value="0"/>
		<constructor-arg index="4" value="180"/>
	</bean>

	<!-- long minFrequency, long maxFrequency, boolean isUplink, boolean isDownlink, long gain -->
	<bean id="radio" class="eu.estcube.gs.radio.HamlibRadioPart">
		<constructor-arg index="0" value="0"/>
		<constructor-arg index="1" value="1000000"/>				
		<constructor-arg index="2" value="true"/>
		<constructor-arg index="3" value="true"/>
		<constructor-arg index="4" value="100"/>
	</bean>

	<!-- String issuedBy, String name, String type, String description, Rotator rotator, RadioDevice radioDevice -->	
	<bean id="antenna" class="org.hbird.exchange.navigation.Antenna">
		<constructor-arg index="0" value="ES5EC" />
		<constructor-arg index="1" value="ES5EC" />
		<constructor-arg index="2" value="Antenna" />
		<constructor-arg index="3" value="The antenna" />
		<constructor-arg index="4" ref="rotator" />
		<constructor-arg index="5" ref="radio" />
	</bean>

	<!-- D3Vector geoLocation, Antenna antenna -->
	<bean id="groundstation" class="org.hbird.exchange.navigation.GroundStation">
		<constructor-arg index="0" value="location" />
		<constructor-arg index="1" value="antenna" />	
	</bean>

	<bean id="config" class="eu.estcube.gs.hamlib.HamlibDriverConfiguration"/>

	<!-- The driver of the complete ground station. Coordinates the specific part drivers. -->
	<bean id="driver" class="eu.estcube.gs.GroundStationDriver" init-method="init"/>
			
</beans>
