<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/context 
       http://www.springframework.org/schema/context/spring-context-2.5.xsd
       http://camel.apache.org/schema/spring 
       http://camel.apache.org/schema/spring/camel-spring.xsd">

	<import resource="injection.xml"/>

	<!-- String name, String description, String unit, double intercept, double deltaFrequency, long modolus -->
	<bean id="BatteryTemperature" class="org.hbird.business.simpleparametersimulator.LinearParameter">
		<constructor-arg index="0" value="ESTcube/platform/battery1"/>
		<constructor-arg index="1" value="Battery Temperature"/>
		<constructor-arg index="2" value="The temperature of the battery. NOTE: SIMULATED"/>
		<constructor-arg index="3" value="Temperature"/>
		<constructor-arg index="4" value="Celsius"/>
		<constructor-arg index="5" value="0"/>
		<constructor-arg index="6" value="1"/>
		<constructor-arg index="7" value="1000"/>				
	</bean>

	<!-- String name, String description, String unit, double angularFrequency, double amplitude, double phase, double intercept, long modolus -->
	<bean id="BatteryChargeRateCurrent" class="org.hbird.business.simpleparametersimulator.SinusCurveParameter">
		<constructor-arg index="0" value="ESTcube/platform/battery1"/>
		<constructor-arg index="1" value="Battery Charge Rate Current"/>
		<constructor-arg index="2" value="The charge generated by the solar panels and used to recharge the batteries. NOTE: SIMULATED"/>
		<constructor-arg index="3" value="Charge Rate"/>
		<constructor-arg index="4" value="mAh"/>
		<constructor-arg index="5" value="0.01"/>
		<constructor-arg index="6" value="10"/>
		<constructor-arg index="7" value="0"/>
		<constructor-arg index="8" value="2"/>
		<constructor-arg index="9" value="100"/>			
	</bean>

	<!-- String name, String description, String unit, Double value -->
	<bean id="BatteryCapacity" class="org.hbird.business.simpleparametersimulator.ConstantParameter">
		<constructor-arg index="0" value="ESTcube/platform/battery1"/>
		<constructor-arg index="1" value="Battery Capacity"/>
		<constructor-arg index="2" value="The maximum capacity of the battery. NOTE: SIMULATED."/>
		<constructor-arg index="3" value="Capacity"/>
		<constructor-arg index="4" value="mAh"/>
		<constructor-arg index="5" value="1000"/>
	</bean>

	<!-- String name, String description, String unit, Double value -->
	<bean id="ChargingEfficiency" class="org.hbird.business.simpleparametersimulator.ConstantParameter">
		<constructor-arg index="0" value="ESTcube/platform/battery1"/>
		<constructor-arg index="1" value="Charging Efficiency"/>
		<constructor-arg index="2" value="The charging efficiency. NOTE: SIMULATED."/>
		<constructor-arg index="3" value=""/>
		<constructor-arg index="4" value="Percentage"/>
		<constructor-arg index="5" value="20"/>
	</bean>

	<!-- String name, String description, String unit, double intercept, double deltaFrequency, long modolus -->
	<bean id="RotatorAzimut" class="org.hbird.business.simpleparametersimulator.LinearParameter">
		<constructor-arg index="0" value="ES5EC/rotator"/>
		<constructor-arg index="1" value="Rotator Azimut"/>
		<constructor-arg index="2" value="The azimut of the rotator. NOTE: SIMULATED"/>
		<constructor-arg index="3" value=""/>
		<constructor-arg index="4" value="Degree"/>
		<constructor-arg index="5" value="0"/>
		<constructor-arg index="6" value="1"/>
		<constructor-arg index="7" value="415"/>				
	</bean>

	<!-- String name, String description, String unit, double intercept, double deltaFrequency, long modolus -->
	<bean id="RotatorElevation" class="org.hbird.business.simpleparametersimulator.LinearParameter">
		<constructor-arg index="0" value="ES5EC/rotator"/>
		<constructor-arg index="1" value="Rotator Elevation"/>
		<constructor-arg index="2" value="The elevation of the rotator. NOTE: SIMULATED"/>
		<constructor-arg index="3" value=""/>
		<constructor-arg index="4" value="Degree"/>
		<constructor-arg index="5" value="0"/>
		<constructor-arg index="6" value="1"/>
		<constructor-arg index="7" value="180"/>				
	</bean>

	<!-- String issuedBy, String name, String description, Boolean value, String isStateOf -->
	<bean id="RotatorStatus" class="org.hbird.business.simpleparametersimulator.BooleanParameter">
		<constructor-arg index="0" value="ES5EC/rotator"/>
		<constructor-arg index="1" value="Rotator Power"/>
		<constructor-arg index="2" value="The power setting of the rotator. NOTE: SIMULATED"/>
		<constructor-arg index="3" value="true"/>
		<constructor-arg index="4" value="Rotator"/>
	</bean>


	<bean id="orbitSimulator" class="org.hbird.business.simpleparametersimulator.OrbitSimulator"/>

	<camelContext id="context" xmlns="http://camel.apache.org/schema/spring">
		<template id="producer"/>

		<routeContextRef ref="injectionRoutes"/>

		<route>
			<from uri="timer://BatteryTemperature?fixedRate=true&amp;period=1000" />
			<to uri="bean:BatteryTemperature"/>
			<to uri="direct:injection"/>
		</route>

		<route>
			<from uri="timer://BatteryChargeRateCurrent?fixedRate=true&amp;period=1000" />
			<to uri="bean:BatteryChargeRateCurrent"/>
			<to uri="direct:injection"/>
		</route>

		<route>
			<from uri="timer://BatteryCapacity?fixedRate=true&amp;period=1000" />
			<to uri="bean:BatteryCapacity"/>
			<to uri="direct:injection"/>
		</route>

		<route>
			<from uri="timer://ChargingEfficiency?fixedRate=true&amp;period=1000" />
			<to uri="bean:ChargingEfficiency"/>
			<to uri="direct:injection"/>
		</route>

		<route>
			<from uri="timer://RotatorAzimut?fixedRate=true&amp;period=1000" />
			<to uri="bean:RotatorAzimut"/>
			<to uri="direct:injection"/>
		</route>

		<route>
			<from uri="timer://RotatorElevation?fixedRate=true&amp;period=1000" />
			<to uri="bean:RotatorElevation"/>
			<to uri="direct:injection"/>
		</route>

		<route>
			<from uri="timer://RotatorStatus?fixedRate=true&amp;period=1000" />
			<to uri="bean:RotatorStatus"/>
			<to uri="direct:injection"/>
		</route>

		<route>
			<from uri="timer://Orbit?fixedRate=true&amp;period=60000" />
			<to uri="bean:orbitSimulator"/>
			<to uri="direct:injection"/>
		</route>

	</camelContext>
	
</beans>