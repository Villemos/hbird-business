<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-3.0.xsd
       http://camel.apache.org/schema/spring
       http://camel.apache.org/schema/spring/camel-spring.xsd">

	<!-- Temperature that will increase from 20 to 90 degrees over 5 minutes. Will then reset. -->
	<bean id="BatteryTemperature" class="org.hbird.business.simpleparametersimulator.LinearParameter">
		<constructor-arg index="0" value="BATTERY_TEMPERATURE"/>
		<constructor-arg index="1" value="Simulator"/>
		<constructor-arg index="2" value="ESTCube-1/Battery Temperature"/>
		<constructor-arg index="3" value="The temperature of the battery. NOTE: SIMULATED"/>
		<constructor-arg index="4" value="Celsius"/>
		<constructor-arg index="5" value="20"/>
		<constructor-arg index="6" value="0.00023333"/>
		<constructor-arg index="7" value="300000"/>				
	</bean>

	<!-- String name, String description, String unit, double angularFrequency, double amplitude, double phase, double intercept, long modolus -->
	<bean id="BatteryChargeRateCurrent" class="org.hbird.business.simpleparametersimulator.SinusCurveParameter">
		<constructor-arg index="0" value="BATTERY_CHARGE_RATE_CURRENT"/>
		<constructor-arg index="1" value="Simulator"/>
		<constructor-arg index="2" value="Battery Charge Rate Current"/>
		<constructor-arg index="3" value="The charge generated by the solar panels and used to recharge the batteries. NOTE: SIMULATED"/>
		<constructor-arg index="4" value="mAh"/>
		<constructor-arg index="5" value="0.00002944d"/>
		<constructor-arg index="6" value="40000"/>
		<constructor-arg index="7" value="0"/>
		<constructor-arg index="8" value="40000"/>
		<constructor-arg index="9" value="300000"/>			
	</bean>

	<!-- String name, String description, String unit, Double value -->
	<bean id="BatteryCapacity" class="org.hbird.business.simpleparametersimulator.ConstantParameter">
		<constructor-arg index="0" value="BATTERY_CAPACITY"/>
		<constructor-arg index="1" value="Simulator"/>
		<constructor-arg index="2" value="Battery Capacity"/>
		<constructor-arg index="3" value="The maximum capacity of the battery. NOTE: SIMULATED."/>
		<constructor-arg index="4" value="mAh"/>
		<constructor-arg index="5" value="1000"/>
	</bean>

	<!-- String name, String description, String unit, Double value -->
	<bean id="ChargingEfficiency" class="org.hbird.business.simpleparametersimulator.ConstantParameter">
		<constructor-arg index="0" value="CHARGE_EFFICIENCY"/>
		<constructor-arg index="1" value="Simulator"/>
		<constructor-arg index="2" value="Charging Efficiency"/>
		<constructor-arg index="3" value="The charging efficiency. NOTE: SIMULATED."/>
		<constructor-arg index="4" value="Percentage"/>
		<constructor-arg index="5" value="20"/>
	</bean>

	<bean id="sender" class="org.hbird.business.simpleparametersimulator.SenderBean"/>

	<camelContext id="context" xmlns="http://camel.apache.org/schema/spring">
		<template id="producer"/>

		<route>
			<from uri="timer://BatteryTemperature?fixedRate=true&amp;period=1000" />
			<to uri="bean:BatteryTemperature"/>
			<to uri="direct:injection"/>
		</route>

		<route>
			<from uri="timer://BatteryChargeRateCurrent?fixedRate=true&amp;period=1000" />
			<to uri="bean:BatteryChargeRateCurrent"/>
			<to uri="direct:injection"/>
		</route>

		<route>
			<from uri="timer://BatteryCapacity?fixedRate=true&amp;period=60000" />
			<to uri="bean:BatteryCapacity"/>
			<to uri="direct:injection"/>
		</route>

		<route>
			<from uri="timer://ChargingEfficiency?fixedRate=true&amp;period=60000" />
			<to uri="bean:ChargingEfficiency"/>
			<to uri="direct:injection"/>
		</route>

		<route id="injection">
			<from uri="direct:injection" />
			<to uri="bean:sender"/>
		</route>
		
	</camelContext>
	
</beans>